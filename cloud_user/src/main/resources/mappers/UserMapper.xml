<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Gu.user.mapper.UserMapper">
    <resultMap id="userMapper" type="com.Gu.entity.User">
        <id column="id" property="Id"/>
        <result column="username" property="userName"/>
        <result column="address" property="address"/>
    </resultMap>
    <insert id="register" parameterType="java.util.Map">
        insert into user(user_id,password)
        values (#{userId},#{Password})
    </insert>
    <select id="userLogin" resultMap="userMapper">
        select *
        from user
        where user_id = #{userId} and password=#{Password}
    </select>
    <select id="selectUser" parameterType="java.util.Map" resultMap="userMap">
        select *
        from user
        where user_id=#{userId}
    </select>
</mapper>