<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Gu.user.mapper.UserMapper">
    <resultMap id="userMapper" type="com.Gu.entity.User">
        <id column="id" property="Id"/>
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="userPassword"/>
        <result column="protection" property="userProtection"/>
    </resultMap>
    <resultMap id="timeMapper" type="com.Gu.entity.MeetingDate">
        <id column="id" property="Id"/>
        <result column="user_id" property="userId"/>
        <result column="meeting_id" property="meetingId"/>
        <result column="create_time" property="createTime"/>
        <result column="end_time" property="endTime"/>
    </resultMap>
    <insert id="register" parameterType="com.Gu.entity.User">
        insert into user(user_id,password,protection,user_name)
        values (#{userId},#{userPassword},#{userProtection},#{userName})
    </insert>
    <select id="userLogin" resultMap="userMapper">
        select *
        from user
        where user_id = #{userId} and password=#{password}
    </select>
    <select id="selectUser" parameterType="java.util.Map" resultType="com.Gu.entity.User">
        select *
        from user
        where user_id=#{userId}
    </select>
    <select id="getById" parameterType="java.lang.Integer" resultMap="userMapper">
        select *
        from user
        where id = #{id}
    </select>
    <select id="getUserName" parameterType="java.util.Map" resultType="java.lang.String">
        select user_name
        from user
        where user_id = #{userId}
    </select>

    <insert id="createMeeting" parameterType="com.Gu.entity.MeetingDate">
        insert into meeting_time(user_id, meeting_id, create_time, end_time)
        VALUES (#{userId},#{meetingId},#{createTime},#{endTime})
    </insert>
</mapper>